@using Photicon.Models
@model Photicon.Models.RegisterViewModel
<p style="text-align:center">
    <img src="~/Images/camera.png" style="width:80px" />
</p>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h2 style="margin-bottom:20px;color:#eee;">Create Your Photicon Account</h2>
    <hr style="border:1px solid #E54657; margin-top: 2px; width:50%;">

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-4 control-label registerLabel" })
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control registerInput"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label registerLabel" })
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control registerInput" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label registerLabel" })
            <div class="col-md-12">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control registerInput" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label registerLabel" })
            <div class="col-md-12">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control registerInput" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" class="btn btn-success" value="Register" style="width:30%;margin-top:5px;height:45px;"/>
            </div>
        </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
