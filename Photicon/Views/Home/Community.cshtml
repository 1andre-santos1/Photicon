<div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
    <div id="gallery">
        <header class="masthead mb-auto" style="margin-bottom: 0px !important;">
            <div class="inner">
                <nav class="navbar justify-content-between">
                    <a href='@Url.Action("MainPage", "Home",new{Id=@Model.User.Id})'>
                        <span class="masthead-brand" style="font-size: 30px;"><img src="/Images/camera.png" style="width: 40px; height: 40px; margin-right:15px;" />Gallery</span>
                    </a>
                    <a href='@Url.Action("Community", "Home", new {Id = @Model.User.Id})'>
                        <span class="mastheah-brand" style="font-size: 30px;"><img src="~/Images/community.png" style="width: 40px; height: 40px; margin-left: 10px; margin-right:15px;" />Community</span>
                    </a>
                    <a href='@Url.Action("AddPicture", "Home", new {Id = @Model.User.Id})'>
                        <span class="mastheah-brand" style="font-size: 30px;"><img src="/Images/add.png" style="width: 40px; height: 40px; margin-left: 10px; margin-right:15px;" />Add Picture</span>
                    </a>
                    <div class="dropdown" style="padding:5px;">
                        <span class="mastheah-brand dropdown-toggle" data-toggle="dropdown" id="userMenu" style="font-size:large; color:#ddd; cursor:pointer;" onmouseover="this.style.color = '#fff'" onmouseout="this.style.color = '#ddd'">
                            @if (Model.User.ProfilePhoto == null)
                            {
                                <img src="~/Images/male.png" style="width: 40px; height: 40px; margin-left: 10px;margin-right:5px;border-radius:35px; object-fit:cover;" />
                            }
                            else
                            {
                                <img src="@Model.User.ProfilePhoto" style="width: 50px; height: 50px; margin-left: 10px;margin-right:5px;border-radius:35px; object-fit:cover;" />

                            }
                            @Model.User.UserName
                        </span>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="userMenu" style="background-color:#333;padding:20px;">
                            <li role="presentation" style="margin-bottom:10px">
                                <a href='@Url.Action("EditProfile", "Home",new{Id=@Model.User.Id})' class="btn btn-danger" style="width:100%;">
                                    Profile
                                </a>
                            </li>
                            <hr style="border:1px solid #E54657; margin-top: 2px;">
                            <li role="presentation">
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="submit" class="btn btn-danger" value="LogOff" style="width:100%;" />
                                }
                            </li>
                        </ul>
                    </div>
                </nav>
                <hr style="border:1px solid #E54657; margin-top: 2px;">
            </div>
        </header>
        <div class="container text-center">
            <div class="row" style="display:flex;flex-wrap:wrap;width:100%;">
                @{
                    foreach (var picture in @Model.Pictures)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" style="padding:0; display:inline-block;margin:0px 10px 10px 0px;">
                            <div class="picContainer" style="display:inline-block;position:relative; width:100%;">
                                <div class="picBanner" style="position:absolute; background-color:rgba(0,0,0,0.5); color:white; right:0;bottom:0;height:100%;width:100%; padding:20px;display:none;">
                                    <span style="font-size:x-large;">@picture.Description</span>
                                    <br />
                                    @if (picture.User != Model.User)
                                    {
                                        <a href="@Url.Action("LikePicture","Home",new { UserId = Model.User.Id,PictureId = picture.Id })" class="popoverLikes">
                                            <span style="float:left;">
                                                <img src="~/Images/thumbsUp.png" style="width:30px; height:30px; margin-right:10px;" />
                                            </span>
                                        </a>
                                    }
                                    else
                                    {
                                        <span style="float:left;" class="popoverLikes">
                                            <img src="~/Images/thumbsUp.png" style="width:30px; height:30px; margin-right:10px;" />
                                        </span>

                                    }

                                    <span style="float:left;">
                                        @picture.Likes
                                    </span>

                                    <span style="float:right;">@picture.UploadDate.Day/@picture.UploadDate.Month/@picture.UploadDate.Year</span>
                                    @if (picture.User == Model.User)
                                    {
                                        <span><img src="~/Images/user.png" style="width:30px; height:30px;margin-top:5px;" /></span>
                                    }
                                    else
                                    {
                                        if (picture.User.ProfilePhoto == null)
                                        {
                                            <a href='@Url.Action("ViewOtherUserProfile", "Home",new{UserId=Model.User.Id,ViewedUserId=picture.User.Id})'>
                                                <span><img src="~/Images/male.png" style="width:30px; height:30px;margin-top:5px;border-radius:35px; object-fit:cover;" /></span>
                                            </a>
                                        }

                                        else
                                        {
                                            <a href='@Url.Action("ViewOtherUserProfile", "Home",new{UserId=Model.User.Id,ViewedUserId=picture.User.Id})'>
                                                <span><img src="@picture.User.ProfilePhoto" style="width:30px; height:30px;margin-top:5px;border-radius:35px; object-fit:cover;" /></span>
                                            </a>
                                        }
                                        <span>@picture.User.UserName</span>
                                    }
                                    <br />
                                    <div style="float:left; background-color:rgba(0,0,0,0.6); display:none;" class="popup">
                                        @{

                                            foreach (var user in picture.UsersThatLiked)
                                            {
                                                <p>@user.UserName</p>
                                            }
                                        }
                                    </div>
                                </div>
                                <img class="picture" src="@picture.Path" style="margin-bottom: 0; width:100%;height:350px;object-fit:cover;">

                            </div>
                        </div>
                    }
                    <h1 style="margin: auto;"></h1>
                }
            </div>
        </div>
    </div>
</div>
<script>
    $(".dropdown").hover(
        function (event) {
            $('.dropdown-menu').css('display', 'block');
            $(this).css('backgroundColor', 'rgba(0,0,0,0.2)');
            $('.dropdown-menu').css('backgroundColor', 'rgba(0,0,0,0.2)');
        },
        function (event) {
            $('.dropdown-menu').css('display', 'none');
            $(this).css('backgroundColor', 'rgba(0,0,0,0)');
            $('.dropdown-menu').css('backgroundColor', 'rgba(0,0,0,0)');
        }
    );
    $(".popoverLikes").hover(
        function (event) {
            $(this).siblings('.popup').css('display', 'block');
        },
        function (event) {
            $(this).siblings('.popup').css('display', 'none');
        }
    );
</script>
