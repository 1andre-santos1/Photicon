<div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
    <div id="gallery">
        <header class="masthead mb-auto" style="margin-bottom: 0px !important;">
            <div class="inner">
                <nav class="navbar justify-content-between">
                    <a href='@Url.Action("MainPage", "Home",new{Id=@Model.Id})'>
                        <span class="masthead-brand" style="font-size: 30px;"><img src="/Images/camera.png" style="width: 40px; height: 40px; margin-right:15px;" />Gallery</span>
                    </a>
                    <a href='@Url.Action("Community", "Home", new {Id = @Model.Id})'>
                        <span class="mastheah-brand" style="font-size: 30px;"><img src="~/Images/community.png" style="width: 40px; height: 40px; margin-left: 10px; margin-right:15px;" />Community</span>
                    </a>
                    <a href='@Url.Action("AddPicture", "Home", new {Id = @Model.Id})'>
                        <span class="mastheah-brand" style="font-size: 30px;"><img src="/Images/add.png" style="width: 40px; height: 40px; margin-left: 10px; margin-right:15px;" />Add Picture</span>
                    </a>
                    <div class="dropdown" style="padding:5px;">
                        <span class="mastheah-brand dropdown-toggle" data-toggle="dropdown" id="userMenu" style="font-size:large; color:#ddd; cursor:pointer;" onmouseover="this.style.color = '#fff'" onmouseout="this.style.color = '#ddd'">
                            @if (Model.ProfilePhoto == null)
                            {
                                <img src="~/Images/male.png" style="width: 40px; height: 40px; margin-left: 10px;margin-right:5px;border-radius:35px; object-fit:cover;" />
                            }
                            else
                            {
                                <img src="@Model.ProfilePhoto" style="width: 50px; height: 50px; margin-left: 10px;margin-right:5px;border-radius:35px; object-fit:cover;" />

                            }
                            @Model.UserName
                        </span>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="userMenu" style="background-color:#333;padding:20px;">
                            <li role="presentation" style="margin-bottom:10px">
                                <a href='@Url.Action("EditProfile", "Home",new{Id=@Model.Id})' class="btn btn-danger" style="width:100%;">
                                    Profile
                                </a>
                            </li>
                            <hr style="border:1px solid #E54657; margin-top: 2px;">
                            <li role="presentation">
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="submit" class="btn btn-danger" value="LogOff" style="width:100%;" />
                                }
                            </li>
                        </ul>
                    </div>
                </nav>
                <hr style="border:1px solid #E54657; margin-top: 2px;">
            </div>
        </header>
        <div class="container text-center">
            <p align="left">
                <img src="/Images/nopreview.png" style="width: 400px; height: 350px; object-fit: cover;" id="imageShowcase" />
            </p>
            @using (Html.BeginForm("AddPicture", "Home", new { Id = @Model.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <p align="left">
                    <input type="file" name="file" id="imageFile" onchange="readfile(this);" style="margin-bottom: 10px; margin-right: 15px;" accept="image/*" />
                    <br />
                    <label>Private </label>@Html.CheckBox("Visibility")
                    <label>Set as Profile Picture </label>@Html.CheckBox("IsProfilePicture")
                    <div id="tagContainer" style="text-align:left;"></div>
                </p>

                <p align="left">
                    <button id="addTagButton" type="button" class="btn btn-default">Add Tag</button>
                </p>
                <p align="left">
                    <label>Add a little description:</label>
                    <br />
                    <textarea name="PictureDescription" rows="2" cols="55" maxlength="20"></textarea>
                </p>
                <p align="left">
                    <input type="submit" class="btn btn-success" value="Save Changes" />
                </p>
                

            }
            <div class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content" style="background-color:rgba(50,50,50,0.95);border:3px solid #D43546;">
                        <div class="modal-header">
                            <p style="font-size:x-large">Add Tag</p>
                        </div>
                        <div class="modal-body" style="margin-top:10px;">
                            <span>Name </span><input id="tagInput" type="text" name="tagInput" value="" placeholder="Tag Name" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-success addTag">Add Tag</button>
                            <button type="button" class="btn btn-default cancelAddTag">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(".dropdown").hover(
            function (event) {
                $('.dropdown-menu').css('display', 'block');
                $(this).css('backgroundColor', 'rgba(0,0,0,0.2)');
                $('.dropdown-menu').css('backgroundColor', 'rgba(0,0,0,0.2)');
            },
            function (event) {
                $('.dropdown-menu').css('display', 'none');
                $(this).css('backgroundColor', 'rgba(0,0,0,0)');
                $('.dropdown-menu').css('backgroundColor', 'rgba(0,0,0,0)');
            }
        );
        $('#addTagButton').click(function () {
            $('.modal').show();
        });
        $('.cancelAddTag').click(function () {
            $('.modal').hide();
        });
        $('.addTag').click(function () {
            var buttonTag = document.createElement('input');
            buttonTag.textContent = $('#tagInput').val();
            buttonTag.value = buttonTag.textContent;
            buttonTag.name = "Tag";
            $('#tagContainer').append(buttonTag);
            $('.modal').hide();
        });
    </script>
