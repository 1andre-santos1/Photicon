<div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
    <div id="gallery">
        <header class="masthead mb-auto" style="margin-bottom: 0px !important;">
            <div class="inner">
                <nav class="navbar justify-content-between ">
                    <a href='@Url.Action("MainPage", "Home",new{Id=@Model.User.Id})'>
                        <span class="masthead-brand" style="font-size: 30px;"><img src="/Images/camera.png" style="width: 40px; height: 40px; margin-right:15px;" />Gallery</span>
                    </a>
                    <a href='@Url.Action("Community", "Home", new {Id = @Model.User.Id})'>
                        <span class="mastheah-brand" style="font-size: 30px;"><img src="~/Images/community.png" style="width: 40px; height: 40px; margin-left: 10px; margin-right:15px;" />Community</span>
                    </a>
                    <a href='@Url.Action("AddPicture", "Home", new {Id = @Model.User.Id})'>
                        <span class="mastheah-brand" style="font-size: 30px;"><img src="/Images/add.png" style="width: 40px; height: 40px; margin-left: 10px; margin-right:15px;" />Add Picture</span>
                    </a>
                    <div class="dropdown" style="padding:5px;">
                        <span class="mastheah-brand dropdown-toggle" data-toggle="dropdown" id="userMenu" style="font-size:large; color:#ddd; cursor:pointer;" onmouseover="this.style.color = '#fff'" onmouseout="this.style.color = '#ddd'">
                            @if (Model.User.ProfilePhoto == null)
                            {
                                <img src="~/Images/male.png" style="width: 40px; height: 40px; margin-left: 10px;margin-right:5px;border-radius:35px; object-fit:cover;" />
                            }
                            else
                            {
                                <img src="@Model.User.ProfilePhoto" style="width: 50px; height: 50px; margin-left: 10px;margin-right:5px;border-radius:35px; object-fit:cover;" />

                            }
                            @Model.User.UserName
                        </span>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="userMenu" style="background-color:#333;padding:20px;">
                            <li role="presentation" style="margin-bottom:10px">
                                <a href='@Url.Action("EditProfile", "Home",new{Id=@Model.User.Id})' class="btn btn-danger" style="width:100%;">
                                    Edit Profile
                                </a>
                            </li>
                            <hr style="border:1px solid #E54657; margin-top: 2px;">
                            <li role="presentation">
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="submit" class="btn btn-danger" value="LogOff" style="width:100%;" />
                                }
                            </li>
                        </ul>
                    </div>
                </nav>
                <hr style="border:1px solid #E54657; margin-top: 2px;">
            </div>
        </header>
        <div class="container text-center">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" style="padding:0">
                <span style="font-size:xx-large;float:left;margin-bottom:10px;">@Model.Picture.Description</span>
                <div class="picContainer" style="display:inline-block;position:relative; width:100%; margin-bottom:10px;float:left;">
                    <div style="position:absolute; background-color:rgba(0,0,0,0.65); color:white;bottom:0;height:70px;width:100%; padding:20px 20px 0px 20px; display:block;">
                        <span style="float:left;"><img src="~/Images/thumbsUp.png" style="width:30px; height:30px; margin-right:10px;" />@Model.Picture.Likes</span>
                        <span style="font-size:large; float:right;">@Model.Picture.UploadDate.Day/@Model.Picture.UploadDate.Month/@Model.Picture.UploadDate.Year</span>
                        <div style="margin:auto;width:50%;">
                            @{
                                Random r = new Random();
                                foreach (var tag in Model.Picture.TagsList)
                                {
                                    int n = r.Next(0, 4);
                                    switch (n)
                                    {
                                        case 0:
                                            <div id="tagShowcase" style="width:30%;background-color:#243;border:2px solid #465;border-radius:20px;overflow:hidden;display:inline-block;">@tag.Name</div>
                                            break;
                                        case 1:
                                            <div id="tagShowcase" style="width:30%;background-color:#a32;border:2px solid #c54;border-radius:20px;overflow:hidden;display:inline-block;">@tag.Name</div>
                                            break;
                                        case 2:
                                            <div id="tagShowcase" style="width:30%;background-color:#349;border:2px solid #56b;border-radius:20px;overflow:hidden;display:inline-block;">@tag.Name</div>
                                            break;
                                        case 3:
                                            <div id="tagShowcase" style="width:30%;background-color:#b82;border:2px solid #da4;border-radius:20px;overflow:hidden;display:inline-block;">@tag.Name</div>
                                            break;
                                    }
                                }
                            }
                        </div>
                    </div>
                    <p align="left" style="margin-bottom:0px;">
                        <img src="@Model.Picture.Path" style="width: 100%; height: 350px; object-fit: cover;" id="imageShowcase">
                    </p>
                </div>
                @using (Html.BeginForm("EditPicture", "Home", new { PictureId = @Model.Picture.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" class="btn btn-default" value="Photicon Tools" style="width:100%; margin-bottom:10px; font-size:large;" />
                }
                <button id="preRemovalButton" type="button" class="btn btn-danger" style="width:100%; font-size:large;margin-bottom:10px;">Delete Picture</button>

                <label style="font-size:x-large">Private </label>
                @{
                    bool vis = !Model.Picture.Visibility;
                    @Html.CheckBox("Visibility", vis)
                }
                <br />
                <a href="@Url.Action("DownloadPicture", "Home",new {PicturePath = @Model.Picture.Path })">
                    <img src="~/Images/download.png" style="margin-bottom: 20px; ">
                </a>
                <br />
                <input type="submit" class="btn btn-success" value="Save Changes" />

            </div>
        </div>
        <div class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content" style="background-color:rgba(50,50,50,0.95);border:3px solid #D43546;">
                    <div class="modal-body" style="margin-top:10px;">
                        <p style="font-size:large">Do you really want to remove this picture?</p>
                        <p style="font-size:large">The removal will be permanent</p>
                    </div>
                    <div class="modal-footer">
                        @using (Html.BeginForm("DeletePicture", "Home", new { Id = @Model.Picture.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="submit" class="btn btn-danger" value="Remove" />
                        }
                        <button type="button" class="btn btn-default cancelRemoval">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(".dropdown").hover(
        function (event) {
            $('.dropdown-menu').css('display', 'block');
            $(this).css('backgroundColor', 'rgba(0,0,0,0.2)');
            $('.dropdown-menu').css('backgroundColor', 'rgba(0,0,0,0.2)');
        },
        function (event) {
            $('.dropdown-menu').css('display', 'none');
            $(this).css('backgroundColor', 'rgba(0,0,0,0)');
            $('.dropdown-menu').css('backgroundColor', 'rgba(0,0,0,0)');
        }
    );
    $('#preRemovalButton').click(function () {
        $('.modal').show();
    });
    $('.cancelRemoval').click(function () {
        $('.modal').hide();
    });
</script>